<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PGNow - Database Health Insights</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-database-check"></i> PGNow
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/databases"><i class="bi bi-database"></i> Databases</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/health"><i class="bi bi-heart-pulse"></i> Health</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <% if (typeof flash !== 'undefined' && flash.error && flash.error.length > 0) { %>
            <div class="alert alert-danger">
                <%= flash.error %>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
                <h4>Error</h4>
                <p><%= error %></p>
            </div>
        <% } else { %>
            <!-- Overall Health Score -->
            <div class="row mb-4">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-heart-pulse"></i> Database Health Overview
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6>Cache Hit Ratio</h6>
                                        <div class="progress">
                                            <div class="progress-bar <%= cacheStats.cache_hit_ratio >= 90 ? 'bg-success' : (cacheStats.cache_hit_ratio >= 70 ? 'bg-warning' : 'bg-danger') %>" 
                                                role="progressbar" 
                                                style="width: <%= cacheStats.cache_hit_ratio %>%;">
                                                <%= cacheStats.cache_hit_ratio %>%
                                            </div>
                                        </div>
                                        <small class="text-muted">Target: >90%</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6>Transaction Success Rate</h6>
                                        <div class="progress">
                                            <div class="progress-bar <%= txStats.commit_ratio >= 95 ? 'bg-success' : (txStats.commit_ratio >= 80 ? 'bg-warning' : 'bg-danger') %>" 
                                                role="progressbar" 
                                                style="width: <%= txStats.commit_ratio %>%;">
                                                <%= txStats.commit_ratio %>%
                                            </div>
                                        </div>
                                        <small class="text-muted">Target: >95%</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6>Connection Utilization</h6>
                                        <div class="progress">
                                            <div class="progress-bar <%= connStats.connection_utilization <= 70 ? 'bg-success' : (connStats.connection_utilization <= 85 ? 'bg-warning' : 'bg-danger') %>" 
                                                role="progressbar" 
                                                style="width: <%= connStats.connection_utilization %>%;">
                                                <%= connStats.connection_utilization %>%
                                            </div>
                                        </div>
                                        <small class="text-muted">Target: <70%</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center">
                                        <h6>Total Size</h6>
                                        <h3><%= dbStats.total_size %></h3>
                                        <small class="text-muted"><%= dbStats.total_databases %> Database(s)</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Lock Statistics -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-lock"></i> Lock Statistics</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Lock Mode</th>
                                            <th>Status</th>
                                            <th>Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% lockStats.forEach(lock => { %>
                                            <tr>
                                                <td><%= lock.mode %></td>
                                                <td>
                                                    <span class="badge <%= lock.status === 'Granted' ? 'bg-success' : 'bg-warning' %>">
                                                        <%= lock.status %>
                                                    </span>
                                                </td>
                                                <td><%= lock.count %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Unused Indexes -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0"><i class="bi bi-diagram-2"></i> Unused Indexes</h5>
                        </div>
                        <div class="card-body">
                            <% if (indexHealth.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Schema</th>
                                                <th>Table</th>
                                                <th>Index</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% indexHealth.forEach(index => { %>
                                                <tr>
                                                    <td><%= index.schemaname %></td>
                                                    <td><%= index.table_name %></td>
                                                    <td><%= index.index_name %></td>
                                                    <td>
                                                        <span class="badge bg-danger">
                                                            <%= index.index_status %>
                                                        </span>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> No unused indexes found.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Table Bloat -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-danger text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-table"></i> Table Bloat</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Schema</th>
                                            <th>Table</th>
                                            <th>Live Rows</th>
                                            <th>Dead Rows</th>
                                            <th>Bloat %</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% tableBloat.forEach(table => { %>
                                            <tr>
                                                <td><%= table.schemaname %></td>
                                                <td><%= table.table_name %></td>
                                                <td><%= parseInt(table.live_rows).toLocaleString() %></td>
                                                <td><%= parseInt(table.dead_rows).toLocaleString() %></td>
                                                <td>
                                                    <div class="progress">
                                                        <div class="progress-bar <%= table.bloat_ratio <= 10 ? 'bg-success' : (table.bloat_ratio <= 30 ? 'bg-warning' : 'bg-danger') %>" 
                                                            role="progressbar" 
                                                            style="width: <%= table.bloat_ratio %>%;">
                                                            <%= table.bloat_ratio %>%
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Long Running Queries -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0"><i class="bi bi-clock-history"></i> Long Running Queries</h5>
                        </div>
                        <div class="card-body">
                            <% if (longQueries.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>PID</th>
                                                <th>User</th>
                                                <th>State</th>
                                                <th>Duration</th>
                                                <th>Query</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% longQueries.forEach(query => { %>
                                                <tr>
                                                    <td><%= query.pid %></td>
                                                    <td><%= query.usename %></td>
                                                    <td><%= query.state %></td>
                                                    <td><%= query.query_duration %></td>
                                                    <td>
                                                        <code class="small">
                                                            <%= query.query.length > 100 ? query.query.substring(0, 100) + '...' : query.query %>
                                                        </code>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="alert alert-success">
                                    <i class="bi bi-check-circle"></i> No long-running queries found.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vacuum Statistics -->
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-calendar-check"></i> Recent Vacuum Operations</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Schema</th>
                                            <th>Table</th>
                                            <th>Last Vacuum</th>
                                            <th>Last Autovacuum</th>
                                            <th>Manual Vacuums</th>
                                            <th>Autovacuums</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% vacuumStats.forEach(stat => { %>
                                            <tr>
                                                <td><%= stat.schemaname %></td>
                                                <td><%= stat.table_name %></td>
                                                <td><%= stat.last_vacuum ? new Date(stat.last_vacuum).toLocaleString() : 'Never' %></td>
                                                <td><%= stat.last_autovacuum ? new Date(stat.last_autovacuum).toLocaleString() : 'Never' %></td>
                                                <td><%= stat.vacuum_count %></td>
                                                <td><%= stat.autovacuum_count %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 