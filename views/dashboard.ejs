<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PGNow - PostgreSQL Monitoring</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-database-check"></i> PGNow
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/databases"><i class="bi bi-database"></i> Databases</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/health"><i class="bi bi-heart-pulse"></i> Health</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <div id="status-indicator" class="status-indicator <%= typeof error !== 'undefined' ? 'status-down' : 'status-up' %>"></div>
                <span id="status-text" class="text-light ms-2"><%= typeof error !== 'undefined' ? 'Database Down' : 'Database Up' %></span>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <% if (typeof flash !== 'undefined' && flash.error && flash.error.length > 0) { %>
            <div class="alert alert-danger">
                <%= flash.error %>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
                <h4>Connection Error</h4>
                <p><%= error %></p>
                <p>Please check your database connection settings and ensure PostgreSQL is running.</p>
            </div>
        <% } else { %>
            <div class="row">
                <!-- Database Status Card -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-info-circle"></i> Database Status</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Version:</strong> <%= dbStatus.version.split(',')[0] %></p>
                            <p><strong>Uptime:</strong> <%= dbStatus.uptime %></p>
                            <p><strong>Status:</strong> <span class="badge bg-success">Running</span></p>
                            <a href="/databases" class="btn btn-sm btn-outline-primary mt-2">View All Databases</a>
                        </div>
                    </div>
                </div>

                <!-- Connections Card -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-people"></i> Connections</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Active:</span>
                                <strong><%= connectionInfo.active_connections %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Idle:</span>
                                <strong><%= connectionInfo.idle_connections %></strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Total:</span>
                                <strong><%= connectionInfo.total_connections %></strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Max Allowed:</span>
                                <strong><%= maxConnections %></strong>
                            </div>
                            
                            <div class="progress mt-3">
                                <div class="progress-bar" role="progressbar" 
                                    style="width: <%= (connectionInfo.total_connections / maxConnections * 100).toFixed(1) %>%;" 
                                    aria-valuenow="<%= connectionInfo.total_connections %>" 
                                    aria-valuemin="0" 
                                    aria-valuemax="<%= maxConnections %>">
                                    <%= (connectionInfo.total_connections / maxConnections * 100).toFixed(1) %>%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Database Size Card -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-hdd"></i> Storage</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h6 class="text-muted">Total Database Size</h6>
                                <h3 class="mb-3"><%= storageInfo.database_size %></h3>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="text-muted">Tables Size:</span>
                                        <strong><%= storageInfo.tables_size %></strong>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 60%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <span class="text-muted">Indexes Size:</span>
                                        <strong><%= storageInfo.indexes_size %></strong>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 40%"></div>
                                    </div>
                                </div>
                            </div>
                            
                            <h6 class="border-bottom pb-2">Largest Tables</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Table</th>
                                            <th>Total</th>
                                            <th>Data</th>
                                            <th>Index</th>
                                        </tr>
                                    </thead>
                                    <tbody class="small">
                                        <% largestTables.forEach(table => { %>
                                            <tr>
                                                <td><%= table.table_name %></td>
                                                <td><%= table.total_size %></td>
                                                <td><%= table.table_size %></td>
                                                <td><%= table.index_size %></td>
                                            </tr>
                                        <% }) %>
                                        <% if (largestTables.length === 0) { %>
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">No table data available</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Performance Card -->
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="card-title mb-0"><i class="bi bi-speedometer"></i> Performance</h5>
                        </div>
                        <div class="card-body">
                            <div id="performance-metrics">
                                <p>Loading performance metrics...</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Query Statistics Card -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-graph-up"></i> Query Statistics</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Total Queries</h6>
                                        <h3><%= parseInt(queryStats.total_queries).toLocaleString() %></h3>
                                        <div class="progress mt-2">
                                            <div class="progress-bar bg-success" role="progressbar" 
                                                style="width: <%= queryStats.success_rate %>%">
                                                <%= queryStats.success_rate %>% Success Rate
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Row Operations</h6>
                                        <div class="small">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span><i class="bi bi-arrow-down text-success"></i> Fetched</span>
                                                <strong><%= parseInt(queryStats.rows_fetched).toLocaleString() %></strong>
                                            </div>
                                            <div class="d-flex justify-content-between mb-1">
                                                <span><i class="bi bi-arrow-up text-info"></i> Returned</span>
                                                <strong><%= parseInt(queryStats.rows_returned).toLocaleString() %></strong>
                                            </div>
                                            <div class="d-flex justify-content-between mb-1">
                                                <span><i class="bi bi-plus-circle text-primary"></i> Inserted</span>
                                                <strong><%= parseInt(queryStats.rows_inserted).toLocaleString() %></strong>
                                            </div>
                                            <div class="d-flex justify-content-between mb-1">
                                                <span><i class="bi bi-pencil text-warning"></i> Updated</span>
                                                <strong><%= parseInt(queryStats.rows_updated).toLocaleString() %></strong>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <span><i class="bi bi-trash text-danger"></i> Deleted</span>
                                                <strong><%= parseInt(queryStats.rows_deleted).toLocaleString() %></strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Database Activity Card -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="card-title mb-0"><i class="bi bi-activity"></i> Current Activity</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-4">
                                <div class="col-6">
                                    <div class="text-center">
                                        <h6 class="text-muted">Active Queries</h6>
                                        <h3 class="text-success"><%= dbActivity[0]?.active_queries || 0 %></h3>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <h6 class="text-muted">Idle in Transaction</h6>
                                        <h3 class="text-warning"><%= dbActivity[0]?.idle_in_transaction || 0 %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>State</th>
                                            <th>Duration</th>
                                            <th>Wait Event</th>
                                            <th>Query</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% dbActivity.forEach(activity => { %>
                                            <tr>
                                                <td>
                                                    <span class="badge <%= activity.state === 'active' ? 'bg-success' : 
                                                        (activity.state === 'idle in transaction' ? 'bg-warning' : 'bg-secondary') %>">
                                                        <%= activity.state %>
                                                    </span>
                                                </td>
                                                <td><%= Math.floor(activity.session_time / 60) %>m <%= activity.session_time % 60 %>s</td>
                                                <td><%= activity.wait_event_type || 'None' %></td>
                                                <td>
                                                    <code class="small">
                                                        <%= activity.query ? (activity.query.length > 50 ? activity.query.substring(0, 50) + '...' : activity.query) : 'N/A' %>
                                                    </code>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <%- include('partials/footer') %>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 